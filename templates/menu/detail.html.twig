{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="row mt-3 mb-4 pe-3">
                <div class="col-md-4">
                    <img src="{{ asset('images/menu_images/' ~ product.id ~ '.jpg') }}" alt="{{ product.name }}"
                         class="img-fluid">
                </div>
                <div class="col-md-8">
                    <h1 class="mt-4 mt-md-0">{{ product.name }}</h1>
                    <h2>{{ product.price }} z≈Ç</h2>
                    <hr>
                    <b>Description: </b>{{ product.description }}
                    {{ form_start(form) }}
                    <div class="form-group mb-3">

                        {{ form_label(form.quantity) }}
                        {{ form_widget(form.quantity, {
                            'attr': {
                                'class': 'form-control ',
                                'min' : '1',
                                'value': '1'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.quantity) }}
                        </div>
                    </div>
                    {{ form_widget(form.add, {'attr': {'class': 'btn btn-warning w-25'}}) }}
                    <a href="{{ path('menu_main') }}" class="btn btn-danger w-25 float-end">Go Back</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
