{% extends 'base.html.twig' %}

{% block title %}Gallery!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="d-flex ">
        <div class="container p-3 my-5">
            <div class="row justify-content-center align-items-center ">
                {% for image in 1..9 %}
                    {% if image < 4 %}
                        <div class="col-lg-4 col-12 mt-3">
                             <img class="w-100 img-thumbnail" src="{{ asset('images/' ~ image ~'.jpg') }}"
                                alt="image{{ image }}">
                        </div>
                    {% elseif image < 6 %}
                        <div class="col-lg-6 col-12 mt-3">
                            <img class="w-100 img-thumbnail" src="{{ asset('images/' ~ image ~'.jpg') }}"
                                 alt="image{{ image }}">
                        </div>
                    {% else %}
                        <div class="col-lg-3 col-12 mt-3">
                            <img class="w-100 img-thumbnail" src="{{ asset('images/' ~ image ~'.jpg') }}"
                                 alt="image{{ image }}">
                        </div>
                    {% endif %}
                {% endfor %}
            </div>


        </div>
    </div>


{% endblock %}
